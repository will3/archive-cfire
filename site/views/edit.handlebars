<script src="/javascripts/edit.js"></script>
<link rel="stylesheet" type="text/css" href="/stylesheets/spectrum.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<div id="container" tabindex="1">
	<form class="menu-form">
		<div class="form-group">
			<input type='text' id='color-picker'/>
		</div>

		 <div class="form-group">
			<label for="block-x">x</label>
			<input type="number" class="form-control" id="block-x" min="0.1" max="2" step="0.1" value="1">
			<label for="block-y">y</label>
			<input type="number" class="form-control" id="block-y" min="0.1" max="2" step="0.1" value="1">
			<label for="block-z">z</label>
			<input type="number" class="form-control" id="block-z" min="0.1" max="2" step="0.1" value="1">
		</div>
		<div class="form-group">
			    <input id="scale-reset-button" class="btn btn-default" type="button" value="reset scale">
		</div>
		<div class="form-group">
			<input id='new-button' class="btn btn-default" type="button" value="new">
		</div>
		<div class="form-group">
			<button id='open-button' class="btn btn-default">open</button>
		</div>
		<div class="form-group">
			<input id='save-button' class="btn btn-default" type="button" value="save">
		</div>
	</form>
</div>